@model TTS20.Models.RegisterViewModel
@{
    ViewBag.Title = "Регистрация";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Создать новый аккаунт.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @style = "width:40%;" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @style = "width:40%;" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @style = "width:40%;" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Имя</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @style = "width:40%;" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Фамилия</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Surname, new { @class = "form-control", @style = "width:40%;" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Отчество</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.MiddleName, new { @class = "form-control", @style = "width:40%;" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Компания</label>
        <div class="col-md-10">
            @Html.DropDownList("CompanyId", null, "", new { @class = "form-control", @style = "width:40%;" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Зарегистрировать" />
        </div>
    </div>
}


@section Styles{
    <link href="~/Content/css/select2.css" rel="stylesheet" />
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script src="/Theme/vendors/select2/dist/js/select2.js" type="text/javascript"></script>